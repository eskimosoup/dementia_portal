<%= form_for(target_group) do |f| %>
<% if target_group.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(target_group.errors.count, "error") %> prohibited this target_group from being saved:</h2>

    <ul>
      <% target_group.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>



  <div class="tabs prevent-flash">
    <ul class="tab-list">
      <li><a href="#tabs-1">Content</a></li>
      <li><a href="#tabs-2">Settings</a></li>
      <li>
        <%= link_to '#', class: 'destroy-tabs right', data: { class: 'tabs' } do %>
          <%= octicon('chevron-down') %>
        <% end %>
      </li>
    </ul>

    <%= field_set_tag nil, id: 'tabs-1' do %>
      <div class="field">
        <%= f.label :name %><br>
        <%= f.text_field :name %>
      </div>

      <div class="field">
        <%= f.label :colour %><br>
        <%= f.select :colour, TargetGroup::COLOURS %>
      </div>
    <% end %>

    <%= field_set_tag nil, id: 'tabs-2' do %>
      <div class="field">
        <%= f.collection_select :page_id, Page.order(title: :asc), :id, :title %>
      </div>

      <div class="field">
        <%= f.label :suggested_url %><br>
        <%= f.text_field :suggested_url %>
      </div>

      <div class="field">
        <%= f.label :display %><br>
        <%= f.check_box :display %>
      </div>
    <% end %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
