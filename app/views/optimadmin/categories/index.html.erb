<%= render 'optimadmin/shared/header/main_title', title: 'Manage Categories' %>

<div class="main-content">
  <div class="row module-header collapse">
    <%= render 'optimadmin/shared/module/index/new_item', title: 'Category', object: Category, path: new_category_path %>
    <%= render 'optimadmin/shared/search_form' %>
    <%= render 'optimadmin/shared/module/index/pagination' %>
    <%= render 'optimadmin/shared/module/index/order', options: [['Username', 'username']] %>
    <%= render 'optimadmin/shared/module/index/recycle_bin', items: @categories.size, path: root_url %>
    <div class="back">
      <%= link_to reorder_categories_path do %>
        <%= octicon('settings') %>
        Reorder Categories
      <% end %>
    </div>
  </div>

  <div class="row collapse module-list-index header">
    <%= list_item 'large-6 small-8' do 'Title' end %>

    <%= list_item 'large-2 hide-for-medium-down' do 'Image' end %>

    <%= list_item { 'Display' } %>
    <%= list_item { 'View' } %>
    <%= list_item { 'Edit' } %>

    <%= list_item 'large-1 hide-for-medium-down text-center last' do 'Delete' end %>
  </div>

  <%= render partial: 'category', collection: @categories, as: :category_presenter %>
  <%= paginate @categories %>
</div>
